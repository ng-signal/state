{
  "name": "@ngvault/app",
  "version": "0.0.1",
  "description": "NgVault â€” Angular Signal Store: a zoneless, service-first state management library for Angular 20+",
  "author": "Brian Pilati <brianpilati@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ng-signal/state.git"
  },
  "homepage": "https://github.com/ng-signal/state#readme",
  "bugs": {
    "url": "https://github.com/ng-signal/state/issues"
  },
  "license": "MIT",
  "keywords": [
    "angular",
    "signals",
    "state",
    "store",
    "ngvault",
    "zoneless"
  ],
  "files": [
    "src/assets/brand/",
    "src/assets/favicons/",
    "public/favicon.ico",
    "README.md"
  ],
  "scripts": {
    "build": "ng build",
    "build:all": "npm run build:dev-tools && npm run build:core",
    "build:core": "ng build core",
    "build:dev-tools": "ng build dev-tools",
    "build:shared": "ng build shared",
    "clean": "rimraf dist .angular cache coverage",
    "docs": "./node_modules/.bin/compodoc -p tsconfig.docs.json --name '@ngVault Documentation' --theme 'laravel'",
    "docs:coverage": "./node_modules/.bin/compodoc -p tsconfig.docs.json --coverageTest 100 --coverageMinimumPerFile 100 --coverageTestThresholdFail true",
    "docs:serve": "compodoc -s",
    "format:fix": "pretty-quick --staged",
    "format:check": "prettier --config ./.prettierrc --check \"projects/**/*.ts\" \"src/**/*.{ts,js,html,scss,json}\"",
    "format:all": "prettier --config ./.prettierrc --write .",
    "lint": "eslint . --no-warn-ignored",
    "ng": "ng",
    "prepare": "husky",
    "release": "npm run clean && npm run build:core && npm pack dist/core",
    "start": "ng serve",
    "test:ngvault": "ng test ngvault",
    "test:core": "ng test core",
    "test:dev-tools": "ng test dev-tools",
    "test:shared": "ng test shared",
    "test": "npm run test:ngvault && npm run test:state && npm run test:dev-tools && npm run test:shared",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage:core": "ng test core --watch=false --browsers=ChromeHeadless --code-coverage --source-map=false",
    "test:coverage:ngvault": "ng test ngvault --watch=false --browsers=ChromeHeadless --code-coverage --source-map=false",
    "test:coverage:dev-tools": "ng test dev-tools --watch=false --browsers=ChromeHeadless --code-coverage --source-map=false",
    "test:coverage:shared": "ng test shared --watch=false --browsers=ChromeHeadless --code-coverage --source-map=false",
    "test:coverage": "npm run test:coverage:core && npm run test:coverage:ngvault && npm run test:coverage:dev-tools && npm run test:coverage:shared",
    "test:coverage:clean": "rimraf coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "verify": "npm run lint && npm run format:check && npm run typecheck && npm run test:ci",
    "watch": "ng build --watch --configuration development"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,css,html,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@angular/cdk": "^20.2.10",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.10",
    "@angular/router": "^20.3.9",
    "karma-spec-reporter": "^0.0.36",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/eslint-plugin": "^20.5.0",
    "@angular-eslint/eslint-plugin-template": "^20.5.0",
    "@angular-eslint/template-parser": "^20.5.0",
    "@angular/build": "^20.3.7",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.0",
    "@compodoc/compodoc": "^1.1.31",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "angular-in-memory-web-api": "^0.20.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.0",
    "ng-packagr": "^20.3.0",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2"
  }
}
