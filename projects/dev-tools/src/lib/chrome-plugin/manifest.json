{
  "manifest_version": 3,
  "name": "ngVault DevTools",
  "version": "0.0.1",
  "description": "Developer tools panel for inspecting ngVault state and events.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["<all_urls>"],

  "devtools_page": "devtools/devtools.html",

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["bridge/bridge-inject.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "128": "icons/ngvault-128.png"
  }
}
